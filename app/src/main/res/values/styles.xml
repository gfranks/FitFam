<resources>

    <!-- Base application theme. -->
    <style name="DefaultAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/theme_background</item>
        <item name="android:listDivider">@drawable/bg_list_divider</item>
        <item name="android:windowSharedElementEnterTransition">@transition/transition_default
        </item>
        <item name="android:windowSharedElementExitTransition">@transition/transition_default</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="seekArcStyle">@style/DefaultAppTheme.SeekArcStyle</item>
        <item name="md_background_color">@color/theme_background</item>
    </style>

    <style name="DefaultAppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultAppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DefaultAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/theme_default_text</item>
    </style>

    <style name="DefaultAppTheme.CollapsingToolbarLayoutCollapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultAppTheme.CollapsingToolbarLayoutExpandedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white_full_transparent</item>
    </style>

    <style name="DefaultAppTheme.MaterialEditText">
        <item name="android:singleLine">true</item>
        <item name="met_textColor">@color/theme_default_text</item>
        <item name="met_textColorHint">@color/theme_default_text_light</item>
        <item name="met_floatingLabelTextColor">@color/theme_default_text</item>
        <item name="met_underlineColor">@color/theme_divider</item>
        <item name="met_floatingLabel">highlight</item>
    </style>

    <style name="DefaultAppTheme.MaterialEditText.Login" parent="DefaultAppTheme.MaterialEditText">
        <item name="met_primaryColor">@color/theme_accent</item>
        <item name="met_textColor">@color/theme_default_text_inverse</item>
        <item name="met_textColorHint">@color/theme_default_text_light_inverse</item>
        <item name="met_underlineColor">@color/theme_default_text_light_inverse</item>
    </style>

    <style name="DefaultAppTheme.ClusterTextAppearance" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultAppTheme.SwitchCompat">
        <item name="colorControlActivated">@color/theme_accent</item>
        <item name="colorSwitchThumbNormal">@color/gray_super_lightest</item>
        <item name="android:colorForeground">@color/gray_dark_translucent</item>
        <item name="android:textColor">@color/theme_default_text</item>
    </style>

    <style name="DefaultAppTheme.SeekArcStyle">
        <item name="android:layout_width">@dimen/seek_arc_size</item>
        <item name="android:layout_height">@dimen/seek_arc_size</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingTop">35dp</item>
        <item name="sa_max">500</item>
        <item name="sa_progress">0</item>
        <item name="sa_rotation">180</item>
        <item name="sa_startAngle">30</item>
        <item name="sa_sweepAngle">300</item>
    </style>

</resources>
