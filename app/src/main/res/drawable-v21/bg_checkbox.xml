<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:state_enabled="true">
        <ripple android:color="@color/gray_light">
            <item>
                <shape
                    android:dither="true"
                    android:shape="rectangle">
                    <solid android:color="@color/gray_lighter" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_checked="true" android:state_enabled="true">
        <ripple android:color="@color/theme_accent_dark">
            <item>
                <shape
                    android:dither="true"
                    android:shape="rectangle">
                    <solid android:color="@color/theme_accent" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <ripple android:color="@color/gray_lighter">
            <item>
                <shape
                    android:dither="true"
                    android:shape="rectangle">
                    <solid android:color="@color/gray_lighter_translucent" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_checked="true" android:state_enabled="false">
        <ripple android:color="@color/theme_accent_dark">
            <item>
                <shape
                    android:dither="true"
                    android:shape="rectangle">
                    <solid android:color="@color/theme_accent_translucent" />
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="@color/gray_light">
            <item>
                <shape
                    android:dither="true"
                    android:shape="rectangle">
                    <solid android:color="@color/gray_lighter" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>