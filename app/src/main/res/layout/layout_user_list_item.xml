<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_list_item_height"
    android:layout_marginBottom="@dimen/user_list_cell_top_bottom_margin"
    android:layout_marginEnd="@dimen/user_list_cell_left_right_margin"
    android:layout_marginLeft="@dimen/user_list_cell_left_right_margin"
    android:layout_marginRight="@dimen/user_list_cell_left_right_margin"
    android:layout_marginStart="@dimen/user_list_cell_left_right_margin"
    android:layout_marginTop="@dimen/user_list_cell_top_bottom_margin"
    app:cardCornerRadius="@dimen/user_list_item_rounded_corner_radius"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_list_selector">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/user_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_image_size_xxxlarge"
            android:transitionName="@string/transition_image"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/list_cell_vertical_padding"
            android:paddingEnd="@dimen/list_cell_horizontal_padding"
            android:paddingRight="@dimen/list_cell_horizontal_padding"
            android:paddingStart="@dimen/list_cell_horizontal_padding"
            android:paddingTop="@dimen/list_cell_vertical_padding">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:transitionName="@string/transition_name" />

            <TextView
                android:id="@+id/user_exercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>